<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Full resolution image of the attraction in an ImageView -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_marginTop="@dimen/vertical_margin"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_weight="0.2"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                tools:src="@drawable/sample" />

            <TextView
                android:id="@+id/detail_long_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="fill"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_marginTop="@dimen/vertical_margin"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_weight="0.5"
                android:background="?attr/backgroundcolor"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/detailed_text"
                android:typeface="serif"
                android:gravity="center"
                tools:text="Detailed Description about the attraction in a card" />

            <Button
                android:id="@+id/detail_show_in_map_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginBottom="@dimen/vertical_margin"
                android:background="?attr/textcolor"
                android:text="@string/show_map"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <!--<ImageView-->
                <!--android:id="@+id/detail_show_in_map_button"-->
                <!--android:layout_width="262dp"-->
                <!--android:layout_height="104dp"-->
                <!--android:layout_marginLeft="75dp"-->
                <!--app:srcCompat="@drawable/map" />-->



        </LinearLayout>
    </ScrollView>



</LinearLayout>